{
  "name": "claude-code-demo",
  "version": "1.0.0",
  "description": "Claude Code feature demonstration project",
  "main": "dist/api/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "lint": "eslint src --ext .ts && prettier --check src",
    "lint:fix": "eslint src --ext .ts --fix && prettier --write src",
    "typecheck": "tsc --noEmit"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "branches": 80,
        "functions": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
